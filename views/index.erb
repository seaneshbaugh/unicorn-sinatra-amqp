<h1 class="text-center">Sign up for a newsletter you'll never read!</h1>
<form accept-charset="UTF-8" action="/signup" class="form-horizontal" id="signup_form" method="post" novalidate="novalidate">
  <input name="utf8" type="hidden" value="&#x2713;">
  <div class="form-group string required signup_first_name">
    <label class="string required col-lg-2 control-label" for="signup_first_name">
      <abbr title="required">*</abbr> First Name
    </label>
    <div class="col-lg-8">
      <input class="string required form-control" id="signup_first_name" maxlength="255" name="signup[first_name]" size="255" type="text" value="">
    </div>
  </div>
  <div class="form-group string required signup_last_name">
    <label class="string required col-lg-2 control-label" for="signup_last_name">
      <abbr title="required">*</abbr> Last Name
    </label>
    <div class="col-lg-8">
      <input class="string required form-control" id="signup_last_name" maxlength="255" name="signup[last_name]" size="255" type="text" value="">
    </div>
  </div>
  <div class="form-group email required signup_email">
    <label class="email required col-lg-2 control-label" for="signup_email">
      <abbr title="required">*</abbr> Email
    </label>
    <div class="col-lg-8">
      <input class="string email required form-control form-control" id="signup_email" maxlength="255" name="signup[email]" size="255" type="email" value="">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <input class="btn btn btn-primary" name="commit" type="submit" value="Submit">
    </div>
  </div>
</form>
